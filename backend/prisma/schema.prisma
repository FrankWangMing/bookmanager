datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  // previewFeatures = []
}

generator dbml {
  provider = "prisma-dbml-generator"
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  password  String
  firstname String?
  lastname  String?
  posts     Post[]
  role      Role
}

model Supplier {
  id           String   @default(cuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  name         String
  supplierCode String   @id @unique
  books        Book[]
}

model Book {
  id             String   @id @default(cuid())
  supplier       Supplier @relation(fields: [supplierCode], references: [supplierCode])
  supplierCode   String
  bookNumber     Int //图书编号
  name           String //书名
  publish        String //出版社
  discount       Int //折扣
  stock          Int //库存
  price          Int //价格
  author         String //作者
  printTime      String //印刷时间
  readership     String //读者对象
  classification String //中图分类
  address        String //库位
  format         String //开本
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Post {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  published Boolean
  title     String
  content   String?
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  String?
}

enum Role {
  ADMIN
  USER
}
