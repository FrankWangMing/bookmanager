datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  // previewFeatures = []
}

generator dbml {
  provider = "prisma-dbml-generator"
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  password  String
  username  String
  role      Role
}

model Supplier {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  code      String   @unique
  books     Book[]
}

model Book {
  id             Int      @default(autoincrement())
  bookNumber     Int      @id @unique //图书编号 
  supplier       Supplier @relation(fields: [supplierCode], references: [code])
  supplierCode   String
  name           String //书名
  publish        String //出版社
  discount       Int //折扣
  stock          Int //库存
  price          Int //价格
  author         String //作者
  printTime      String //印刷时间
  readership     String //读者对象
  classification String //中图分类
  address        String //库位
  format         String //开本
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

enum Role {
  ADMIN
  USER
}
